<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<div class="container">
  <table class="table table-reponsive table-sm table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">State</th>
        <th scope="col" class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= city.state.name %></td>
          <td class="text-center">
            <%= link_to 'Show', city, class: "btn btn-sm btn-info" %>
            <%= link_to 'Edit', edit_city_path(city), class: "btn btn-sm btn-warning" %>
            <%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= link_to 'New City', new_city_path, class: "btn btn-primary" %>
  </div>

</div>