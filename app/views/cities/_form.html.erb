<%= form_with(model: city, local: true) do |form| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="form-group row">
      <%= form.label :name, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :name, class:"form-control", placeholder: :name %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :state_id, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= collection_select :city, :state_id, State.all, :id, :name, {}, {class: "form-control"} %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
